{
	"name": "Huflit Extension",
	"version": "0.1",
	"manifest_version": 2,
	"icons": {
		"16": "assets/img/huflit.png",
		"32": "assets/img/huflit.png",
		"48": "assets/img/huflit.png",
		"64": "assets/img/huflit.png",
		"128": "assets/img/huflit.png"
	},
	"description": "Schedule and Change Pass for portal.huflit.edu.vn",
	"permissions": ["https://api-huflit.herokuapp.com/*", "storage"],
	"background": {
		"scripts": ["/assets/background/background.js"],
		"persistent": true
	},
	"browser_action": {
		"default_popup": "popup.html"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval' https://cdnjs.cloudflare.com; object-src 'self'"
}
