{
	"name": "Huflit Extension",
	"version": "0.1",
	"manifest_version": 2,
	"icons": {
		"16": "assets/img/huflit.png",
		"32": "assets/img/huflit.png",
		"48": "assets/img/huflit.png",
		"64": "assets/img/huflit.png",
		"128": "assets/img/huflit.png"
	},
	"description": "Extension schedule, show mark and auto survey teacher.",
	"permissions": [
		"https://api-huflit.herokuapp.com/*",
		"https://portal.huflit.edu.vn/",
		"storage",
		"cookies",
		"tabs",
		"notifications"
	],
	"background": {
		"scripts": ["/assets/background/background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": "assets/img/huflit.png"
	}
}
