{
     "name" : "Huflit Extension",
     "icons" : {
          "16" : "assets/img/huflit.png",
          "32" : "assets/img/huflit.png",
          "48" : "assets/img/huflit.png",
          "64" : "assets/img/huflit.png",
          "128" : "assets/img/huflit.png"
     },
     "description" : "Huflit Extension page portal.huflit.edu.vn",
     "version" : "1.0",
     "manifest_version" : 2,
     "permissions" : [
          "https://api-huflit.herokuapp.com/*",
          "storage"
     ],
     "background" : {
          "scripts": ["/assets/background/background.js"],
          "persistent": false
     },
     "browser_action": {
          "default_popup": "popup.html"
     },
     "content_security_policy" : "script-src 'self' https://api-huflit-server.glitch.me; object-src 'self'" 
}